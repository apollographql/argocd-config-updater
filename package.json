{
  "name": "argocd-config-updater",
  "description": "ArgoCD Config Updater",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/apollographql/argocd-config-updater",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollographql/argocd-config-updater.git"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && rm -rf dist && mkdir dist && npm run copy-wasm && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c .eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run copy-wasm && npm run package",
    "copy-wasm": "cp node_modules/re2-wasm/build/wasm/re2.wasm dist/re2.wasm"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "@google-cloud/artifact-registry": "^3.1.0",
    "@octokit/plugin-throttling": "^8.1.3",
    "async": "^3.2.5",
    "lodash": "^4.17.21",
    "lru-cache": "^10.2.0",
    "re2-wasm": "^1.0.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/async": "3.2.24",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.14.202",
    "@types/node": "20.11.25",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.57.0",
    "eslint-plugin-github": "4.10.2",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-jsonc": "2.13.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "prettier-eslint": "16.3.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  }
}
