{
  "name": "argocd-config-updater",
  "description": "ArgoCD Config Updater",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/apollographql/argocd-config-updater",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollographql/argocd-config-updater.git"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && rm -rf dist && mkdir dist && npm run copy-wasm && npm run package",
    "ci-test": "vitest run",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint .",
    "package": "rollup --config rollup.config.js --failAfterWarnings",
    "package:watch": "npm run package -- --watch",
    "test": "vitest run",
    "test-ui": "vitest run --ui",
    "all": "npm run format:write && npm run lint && npm run test && npm run copy-wasm && npm run package",
    "copy-wasm": "cp node_modules/re2-wasm/build/wasm/re2.wasm dist/re2.wasm"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0",
    "@google-cloud/artifact-registry": "^4.0.0",
    "@octokit/plugin-throttling": "^11.0.0",
    "arktype": "2.1.27",
    "async": "^3.2.5",
    "lodash": "^4.17.21",
    "lru-cache": "^11.0.0",
    "re2-wasm": "^1.0.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/async": "3.2.25",
    "@types/lodash": "4.17.20",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "@vitest/eslint-plugin": "1.4.3",
    "@vitest/ui": "4.0.10",
    "eslint": "9.39.1",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "prettier-eslint": "16.4.2",
    "rollup": "4.53.3",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.10"
  }
}
